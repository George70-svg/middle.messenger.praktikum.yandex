<main class='registration-page'>
  <div class="registration-container">
    <h1 class='title'>Регистрация</h1>

    <form>
      <div class='field-container'>
        {{> input type='email' id='registration-email' class='email field' name='email' placeholder='Почта' }}
      </div>
      <div class='field-container'>
        {{> input type='text' id='registration-username' class='username field' name='username' placeholder='Логин' }}
      </div>
      <div class='field-container'>
        {{> input type='text' id='registration-name' class='name field' name='name' placeholder='Имя' }}
      </div>
      <div class='field-container'>
        {{> input type='text' id='registration-surname' class='surname field' name='surname' placeholder='Фамилия' }}
      </div>
      <div class='field-container'>
        {{> input type='tel' id='registration-tel' class='tel field' name='tel' placeholder='Телефон' }}
      </div>
      <div class='field-container'>
        {{> input type='password' id='registration-password' class='password field' name='password' placeholder='Пароль' }}
      </div>
      <div class='field-container'>
        {{> input type='password' id='registration-confirm-password' class='confirm-password field' name='confirm-password' placeholder='Пароль (ещё раз)' }}
      </div>
    </form>

    {{> button class='button' text='Зарегистрироваться' }}
    {{> link class='link' href='registrationPage' data-page='registrationPage' text='Войти' }}
  </div>

  {{> footer class='footer' }}
</main>
